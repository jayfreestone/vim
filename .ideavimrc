set surround
set incsearch
set ignorecase
set smartcase

let mapleader = ","

" Switch tabs
nnoremap <leader>l gt
nnoremap <leader>h gT

" Acejump
map <leader>f :action AceAction<CR>

" 'Buffer' style
map <C-b> :action RecentChangedFiles<CR>

" File structure
map - :action SelectInProjectView<CR>

" Use ctrl-[hjkl] to select the active split
map <C-k> <C-W>k
map <C-h> <C-W>h
map <C-j> <C-W>j
map <C-l> <C-W>l

" Bookmarks
map mm :action ToggleBookmark<CR>
map mn :action GotoNextBookmark<CR>
map mp :action GotoPreviousBookmark<CR>

nnoremap % :action EditorMatchBrace<CR>
